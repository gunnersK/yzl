			</if>
			<if test="authoritys!=null and authoritys.size>0">
			   AND etp.countyCode	in		 
				 <foreach collection="authoritys" item="authority" open="("  separator="," close=")">
	                  #{authority}
	              </foreach>
             </if>
    </select>
    
